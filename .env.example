# Alpaca API credentials — get these from https://app.alpaca.markets/
# Both naming conventions are accepted:
#   ALPACA_KEY / ALPACA_SECRET  (this project's names)
#   APCA_API_KEY_ID / APCA_API_SECRET_KEY  (Alpaca SDK standard names)
ALPACA_KEY=your_paper_api_key_here
ALPACA_SECRET=your_paper_api_secret_here
ALPACA_PAPER=true

# Strategy configuration (all optional — defaults shown)
SYMBOL=SPY
MAX_TRADES_PER_DAY=5
RISK_PCT=0.01
GAP_THRESHOLD=0.005
BAND_LOOKBACK=20
BAND_MULT=2.0
ENTRY_WINDOW_MINUTES=30
STOP_PCT=0.01
USE_VWAP_EXIT=true

# Set to true to log signals without placing real orders
DRY_RUN=false
